{
  "manifest_version": 2,
  
  "name": "json poll",
  "version": "1.0",
  "description": "poll json and display result in toolbar.",
  
  "icons": {
    "64": "cloud-reload-21-64x64.png",
    "128": "cloud-reload-21-128x128.png",
    "256": "cloud-reload-21-256x256.png",
	  "512": "cloud-reload-21.png"
  },
  
  "permissions": [
	  "background",
    "storage"
  ],
  
  "browser_action": {
	"name": "click me",
    "default_icon": "cloud-reload-21-64x64.png"
  },
  
  "options_page": "options.html",

  "background": { "scripts": ["jquery-2.1.1.min.js", "background.js"] }
}